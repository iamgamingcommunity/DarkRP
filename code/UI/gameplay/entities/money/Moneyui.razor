@using Sandbox;
@using Sandbox.UI;
@inherits PanelComponent
@namespace Sandbox

<root>
	<div class="money">
	<p>@MoneyVar.MoneyStackAmount</p>
	
	</div>
</root>

@code
{

	[Property] Money MoneyVar { get; set; }

	/// <summary>
	/// the hash determines if the system should be rebuilt. If it changes, it will be rebuilt
	/// </summary>
	protected override int BuildHash() 
	{
		return System.HashCode.Combine( MoneyVar );
	}
}